{
  "name": "desinetwork",
  "version": "1.0.0",
  "description": "DesiNetwork classifieds application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:setup": "cd backend && npm run db:setup",
    "db:seed": "cd backend && npm run db:seed",
    "db:migrate-classified-images": "cd backend && node src/db/migrate-classified-images.js",
    "db:seed-images": "cd backend && node src/db/seed-images-for-classifieds.js",
    "db:remove-duplicates": "cd backend && node src/db/remove-duplicate-classifieds.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
